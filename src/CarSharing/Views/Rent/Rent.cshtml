@model CarSharing.Models.RentCarViewModel

@{
    ViewData["Title"] = "Rent";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card text-dark">
                <h1 class="card-header">Rent car</h1>
                <div class="row">
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(model => Model.TotalCost)
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input id="start" asp-for="StartDate" class="text-dark bg-light form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input id="end" asp-for="EndDate" class="text-dark bg-light form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="calc" asp-action="CalculateCost" type="submit" value="Calculate" class="btn btn-primary" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="text-dark bg-light form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="text-dark bg-light form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="text-dark bg-light form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TotalCost" class="control-label">Total Cost: @Model.TotalCost</label>
                                <span id="result"></span>
                            </div>

                            <div class="form-group">
                                <input asp-action="Rent" type="submit" value="Rent car" class="btn btn-primary" />
                            </div>
                            @Html.HiddenFor(model => Model.Cost)
                            @Html.HiddenFor(model => Model.CarId)

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
