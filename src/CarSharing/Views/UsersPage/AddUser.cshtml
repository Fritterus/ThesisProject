@model CarSharing.Models.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}

<div class="card">
    <div class="card-body">
        <form asp-action="AddUser" asp-controller="UsersPage">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Name</label>
                <input type="text" asp-for="FullName" class="bg-light text-dark form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="bg-light text-dark form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone</label>
                <input type="text" asp-for="PhoneNumber" class="bg-light text-dark form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input type="password" asp-for="Password" class="bg-light text-dark form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>